<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="@drawable/bg_top"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/title"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_menu" />
        <ImageButton
            android:id="@+id/btn_devcie_change"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/btn_device_change" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.08"
        android:background="@drawable/title_smart_controller">

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.66">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:gravity="center">

            <ImageView
                android:id="@+id/control_circle1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/img_circle_draw" />

            <ImageView
                android:id="@+id/control_circle2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/img_circle_empty" />

            <ImageView
                android:id="@+id/control_circle3"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/img_circle_empty" />

            <ImageView
                android:id="@+id/control_circle4"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/img_circle_empty" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.08"
        android:background="@drawable/title_current_status">

        <Button
            android:id="@+id/move_dashboard"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_move_dashboard"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.1"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_current_noti"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/current_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:editable="false"
            android:text="현재 변경된 사항 없습니다"
            android:layout_marginLeft="10dp"
            android:textSize="13dp" />

    </LinearLayout>
</LinearLayout>