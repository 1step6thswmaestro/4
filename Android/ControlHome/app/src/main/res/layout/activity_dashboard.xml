<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="@drawable/top_dashboard"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/title"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_menu" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.3"
        android:padding="3dp">

        <ImageView
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dashboard_temprature"/>
        <EditText
            android:id="@+id/edit_temprature"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="105dp"
            android:layout_gravity="center|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:textSize="45dp"
            android:background="@null"/>
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginRight="60dp"
            android:layout_gravity="center|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â°C"
            android:textSize="45dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.3"
        android:padding="3dp">

        <ImageView
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dashboard_huminity"/>
        <EditText
            android:id="@+id/edit_humidity"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="105dp"
            android:layout_gravity="center|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:textSize="45dp"
            android:background="@null"/>
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="45dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.3"
        android:padding="3dp">

        <ImageView
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dashboard_anyone"/>

    </FrameLayout>


</LinearLayout>